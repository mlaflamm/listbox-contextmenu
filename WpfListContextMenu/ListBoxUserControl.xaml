<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="WpfListContextMenu.ListBoxUserControl"
	x:Name="UserControl"
	d:DesignWidth="252" d:DesignHeight="267.08">

	<Grid x:Name="LayoutRoot">
		<ListBox x:Name="listBox" ItemsSource="{Binding}" DisplayMemberPath="Name" SelectionMode="Extended" d:LayoutOverrides="Height">
			<ListBox.ContextMenu>
				<ContextMenu DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}">
					<MenuItem Header="Show Selected" Command="{Binding DataContext.ShowSelectedCommand}"
						CommandParameter="{Binding SelectedItems}"/>
				</ContextMenu>
			</ListBox.ContextMenu>
		</ListBox>
	</Grid>
</UserControl>